<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.AccountView.GameSetup.GameSetupManager">
    <children>
        <GridPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../Style.css">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="153.0" minHeight="10.0" prefHeight="85.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="95.0" minHeight="10.0" prefHeight="53.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="132.0" minHeight="3.0" prefHeight="22.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="114.0" minHeight="10.0" prefHeight="52.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="117.0" minHeight="4.0" prefHeight="14.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="92.0" minHeight="23.0" prefHeight="92.0" />
                <RowConstraints maxHeight="54.0" minHeight="3.0" prefHeight="23.0" />
            <RowConstraints maxHeight="93.0" minHeight="30.0" prefHeight="60.0" />
            </rowConstraints>
            <Label styleClass="myLabelStyle" text="Game Setup" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER" />
            <TextField fx:id="usernameField" prefHeight="25.0" prefWidth="234.0" promptText="rival's username" GridPane.fillWidth="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
            <TextField fx:id="limitField" prefHeight="25.0" prefWidth="234.0" promptText="moves' limit" GridPane.fillWidth="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
            <TextField fx:id="undoLimit" prefHeight="25.0" prefWidth="234.0" promptText="undo limit" GridPane.fillWidth="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
            <Button onMouseClicked="#playGame" prefWidth="159.0" styleClass="redButton" text="start new game" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
            <Button onMouseClicked="#back" prefHeight="25.0" prefWidth="159.0" styleClass="redButton" text="back" GridPane.halignment="CENTER" GridPane.rowIndex="6" />
            <Button onMouseClicked="#exit" prefHeight="25.0" prefWidth="159.0" styleClass="redButton" text="exit" GridPane.halignment="CENTER" GridPane.rowIndex="7" />
            <Label fx:id="errorMessage" styleClass="labelError" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
        </GridPane>
    </children>
</AnchorPane>
